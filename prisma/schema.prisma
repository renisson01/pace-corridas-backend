generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Race {
  id              String   @id @default(cuid())
  name            String
  date            DateTime
  city            String
  state           String
  distances       String
  organizer       String
  status          String   @default("upcoming")
  registrationUrl String?
  imageUrl        String?
  results         Result[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
model Athlete {
  id          String   @id @default(cuid())
  name        String
  city        String?
  state       String?
  gender      String?
  age         Int?
  totalRaces  Int      @default(0)
  totalPoints Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  results     Result[]
  user        User?
}
model Result {
  id          String   @id @default(cuid())
  athleteId   String
  raceId      String
  time        String
  pace        String?
  overallRank Int?
  genderRank  Int?
  ageGroup    String?
  distance    String?
  points      Int      @default(0)
  createdAt   DateTime @default(now())
  athlete     Athlete  @relation(fields: [athleteId], references: [id])
  race        Race     @relation(fields: [raceId], references: [id])
  @@unique([athleteId, raceId])
}
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String
  phone         String?
  city          String?
  state         String?
  gender        String?
  age           Int?
  bio           String?
  photo         String?
  athleteId     String?   @unique
  athlete       Athlete?  @relation(fields: [athleteId], references: [id])
  bip39Hash     String    @default("")
  emailVerified Boolean   @default(false)
  verifyToken   String?
  isPremium     Boolean   @default(false)
  premiumUntil  DateTime?
  isAdmin       Boolean   @default(false)
  isOrganizer   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  likes         Like[]    @relation("UserLikes")
  likedBy       Like[]    @relation("LikedBy")
  following     Follow[]  @relation("Following")
  followers     Follow[]  @relation("Followers")
  posts         Post[]
  postLikes     PostLike[]
  comments      Comment[]
  medals        Medal[]
}
model Like {
  id         String   @id @default(cuid())
  fromUserId String
  toUserId   String
  createdAt  DateTime @default(now())
  fromUser   User     @relation("UserLikes", fields: [fromUserId], references: [id])
  toUser     User     @relation("LikedBy", fields: [toUserId], references: [id])
  @@unique([fromUserId, toUserId])
}
model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())
  follower    User     @relation("Following", fields: [followerId], references: [id])
  following   User     @relation("Followers", fields: [followingId], references: [id])
  @@unique([followerId, followingId])
}
model Post {
  id        String     @id @default(cuid())
  userId    String
  content   String
  photo     String?
  type      String     @default("post")
  distance  String?
  time      String?
  pace      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
  likes     PostLike[]
  comments  Comment[]
}
model PostLike {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  @@unique([userId, postId])
}
model Comment {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}
model Medal {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  desc      String
  icon      String
  earnedAt  DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
model OrganizerRequest {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String?
  eventName       String
  eventCity       String
  eventState      String
  eventDate       String
  distances       String
  registrationUrl String?
  imageUrl        String?
  status          String   @default("pending")
  createdAt       DateTime @default(now())
}
