generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Race {
  id              String   @id @default(cuid())
  name            String
  date            DateTime
  city            String
  state           String
  distances       String
  organizer       String
  status          String   @default("upcoming")
  registrationUrl String?
  imageUrl        String?
  results         Result[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
model Athlete {
  id          String   @id @default(cuid())
  name        String
  city        String?
  state       String?
  gender      String?
  age         Int?
  totalRaces  Int      @default(0)
  totalPoints Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  results     Result[]
  user        User?
}
model Result {
  id          String   @id @default(cuid())
  athleteId   String
  raceId      String
  time        String
  pace        String?
  overallRank Int?
  genderRank  Int?
  ageGroup    String?
  distance    String?
  points      Int      @default(0)
  createdAt   DateTime @default(now())
  athlete     Athlete  @relation(fields: [athleteId], references: [id])
  race        Race     @relation(fields: [raceId], references: [id])
  @@unique([athleteId, raceId])
}
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String
  phone         String?
  city          String?
  state         String?
  gender        String?
  age           Int?
  bio           String?
  photo         String?
  athleteId     String?   @unique
  athlete       Athlete?  @relation(fields: [athleteId], references: [id])
  bip39Hash     String    @default("")
  emailVerified Boolean   @default(false)
  verifyToken   String?
  isPremium     Boolean   @default(false)
  premiumUntil  DateTime?
  isAdmin       Boolean   @default(false)
  isOrganizer   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  likes         Like[]    @relation("UserLikes")
  likedBy       Like[]    @relation("LikedBy")
  following     Follow[]  @relation("Following")
  followers     Follow[]  @relation("Followers")
  posts         Post[]
  postLikes     PostLike[]
  comments      Comment[]
  medals        Medal[]
  pedidosLoja   PedidoCompleto[]
  avatar        AtletaAvatar?
  iaConversa    IaConversa?
  iaPerfil      IaPerfilCorredor?
}
model Like {
  id         String   @id @default(cuid())
  fromUserId String
  toUserId   String
  createdAt  DateTime @default(now())
  fromUser   User     @relation("UserLikes", fields: [fromUserId], references: [id])
  toUser     User     @relation("LikedBy", fields: [toUserId], references: [id])
  @@unique([fromUserId, toUserId])
}
model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())
  follower    User     @relation("Following", fields: [followerId], references: [id])
  following   User     @relation("Followers", fields: [followingId], references: [id])
  @@unique([followerId, followingId])
}
model Post {
  id        String     @id @default(cuid())
  userId    String
  content   String
  photo     String?
  type      String     @default("post")
  distance  String?
  time      String?
  pace      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
  likes     PostLike[]
  comments  Comment[]
}
model PostLike {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  @@unique([userId, postId])
}
model Comment {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
}
model Medal {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  desc      String
  icon      String
  earnedAt  DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
model OrganizerRequest {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String?
  eventName       String
  eventCity       String
  eventState      String
  eventDate       String
  distances       String
  registrationUrl String?
  imageUrl        String?
  status          String   @default("pending")
  createdAt       DateTime @default(now())
}

model Assessoria {
  id          String   @id @default(cuid())
  nome        String
  cidade      String
  estado      String
  descricao   String?
  logo        String?
  instagram   String?
  whatsapp    String?
  site        String?
  fundacao    String?
  membros     Int      @default(0)
  slug        String   @unique
  ativo       Boolean  @default(true)
  createdAt   DateTime @default(now())
  produtos    Produto[]
}

model Produto {
  id            String    @id @default(cuid())
  nome          String
  descricao     String?
  preco         Float
  fotos         String
  tamanhos      String
  categoria     String    @default("camisa")
  assessoriaId  String?
  ativo         Boolean   @default(true)
  estoque       Int       @default(0)
  createdAt     DateTime  @default(now())
  assessoria    Assessoria? @relation(fields: [assessoriaId], references: [id])
  pedidos       Pedido[]
  variantes     ProdutoVariante[]
}

model Pedido {
  id          String   @id @default(cuid())
  userId      String
  produtoId   String
  tamanho     String
  quantidade  Int      @default(1)
  total       Float
  status      String   @default("pendente")
  whatsapp    String?
  obs         String?
  createdAt   DateTime @default(now())
  produto     Produto  @relation(fields: [produtoId], references: [id])
}

model ProdutoVariante {
  id         String  @id @default(cuid())
  produtoId  String
  cor        String
  tamanho    String
  estoque    Int     @default(0)
  produto    Produto @relation(fields: [produtoId], references: [id])
  pedidoItens PedidoItem[]
}

model PedidoItem {
  id          String          @id @default(cuid())
  pedidoId    String
  varianteId  String
  quantidade  Int
  precoUnit   Float
  pedido      PedidoCompleto  @relation(fields: [pedidoId], references: [id])
  variante    ProdutoVariante @relation(fields: [varianteId], references: [id])
}

model PedidoCompleto {
  id          String       @id @default(cuid())
  userId      String
  status      String       @default("novo")
  total       Float
  endereco    String?
  cep         String?
  cidade      String?
  estado      String?
  obs         String?
  visto       Boolean      @default(false)
  criadoEm   DateTime     @default(now())
  itens       PedidoItem[]
  user        User         @relation(fields: [userId], references: [id])
}

model AtletaAvatar {
  id           String   @id @default(cuid())
  userId       String   @unique
  altura       Int?
  peso         Float?
  fotoEvento   String?
  manequim     String?
  medidaTorax  Float?
  medidaOmbro  Float?
  tipoCorpo    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id])
}

model IaConversa {
  id        String     @id @default(cuid())
  userId    String
  mensagens String
  contexto  String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
}

model IaPerfilCorredor {
  id              String   @id @default(cuid())
  userId          String   @unique
  biologico       String?
  psicologico     String?
  social          String?
  funcional       String?
  espiritual      String?
  ambiental       String?
  objetivos       String?
  limitacoes      String?
  historico       String?
  preferencias    String?
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id])
}
