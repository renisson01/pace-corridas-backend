generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Race {
  id              String   @id @default(cuid())
  name            String
  date            DateTime
  city            String
  state           String
  distances       String
  organizer       String
  status          String   @default("upcoming")
  registrationUrl String?
  results         Result[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Athlete {
  id         String   @id @default(cuid())
  name       String
  city       String?
  state      String?
  gender     String?
  age        Int?
  totalRaces Int      @default(0)
  totalPoints Int     @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  results    Result[]
  user       User?
}

model Result {
  id          String   @id @default(cuid())
  athleteId   String
  raceId      String
  time        String
  pace        String?
  overallRank Int?
  genderRank  Int?
  ageGroup    String?
  distance    String?
  points      Int      @default(0)
  createdAt   DateTime @default(now())
  athlete     Athlete  @relation(fields: [athleteId], references: [id])
  race        Race     @relation(fields: [raceId], references: [id])
  @@unique([athleteId, raceId])
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  name          String
  phone         String?
  city          String?
  state         String?
  gender        String?
  age           Int?
  athleteId     String?  @unique
  athlete       Athlete? @relation(fields: [athleteId], references: [id])
  bip39Hash     String   @default("")
  emailVerified Boolean  @default(false)
  verifyToken   String?
  isPremium     Boolean  @default(false)
  isAdmin       Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  likes         Like[]   @relation("UserLikes")
  likedBy       Like[]   @relation("LikedBy")
}

model Like {
  id         String   @id @default(cuid())
  fromUserId String
  toUserId   String
  createdAt  DateTime @default(now())
  fromUser   User     @relation("UserLikes", fields: [fromUserId], references: [id])
  toUser     User     @relation("LikedBy", fields: [toUserId], references: [id])
  @@unique([fromUserId, toUserId])
}

model OrganizerRequest {
  id              String   @id @default(cuid())
  name            String
  email           String
  phone           String?
  eventName       String
  eventCity       String
  eventState      String
  eventDate       String
  distances       String
  registrationUrl String?
  status          String   @default("pending")
  createdAt       DateTime @default(now())
}
